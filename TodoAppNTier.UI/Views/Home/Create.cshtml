@model WorkCreateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


</head>
<body>

    <div class="container my-2">
        <form asp-action="Create" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="work">İşin Tanımı:</label>
                <input asp-for="@Model.Definition" class="form-control" />
            </div>
           
            <div class="form-group form-check my-2">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted"> Tamamlandı mı?
                </label>
            </div>
            <div class="mb-3">  <button type="submit" class="btn btn-primary">Save</button>      </div>
            <div class="text-danger mb-3" asp-validation-summary="All"></div>
        </form>
    </div>

</body>
</html>

